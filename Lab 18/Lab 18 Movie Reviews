using namespace std;

    struct movieReview{
        string comment;
        double rating;
        movieReview* next;
    };
    
    void printNode(movieReview* head){
        movieReview* current = head;
        while (current != nullptr){
            cout<<"Comment: "<<current->comment<<endl;
            cout<<"Rating: "<<current->rating<<endl;
            current = current->next;
        }
        cout<<"nullptr"<<endl;
    }
    
    void userReview(movieReview*& head, int value){
        movieReview* newReview = new movieReview;
        cout<<"Enter review comments: ";
        cin.ignore();
        getline(cin, newReview->comment);
        cout<<"Enter review rating on scale of 0 - 5: ";
        cin>>newReview->rating;
    }
    
int main() {

    movieReview* head = new movieReview;
    movieReview* second = new movieReview;
    movieReview* third = new movieReview;
    movieReview* fourth = new movieReview;
    
    head->rating = 4.3;
    head->comment = "Gratifying";
    head->next = second;
    
    second->rating = 4.8;
    second->comment = "Rating";
    second->next = third;
    
    third->rating = 4.6;
    third->comment = "Once in a lifetime";
    third->next = fourth;
    
    fourth->rating = 4.7;
    fourth->comment = "Unreal";
    fourth->next = nullptr;
    
    printNode(head);
    
    delete head;
    delete second;
    delete third;

return 0;
}


